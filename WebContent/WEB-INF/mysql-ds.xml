<datasources>
	<datasource jndi-name="java:jboss/datasources/bagtepDS"
		pool-name="bagtepPool">
		<connection-url>jdbc:mysql://localhost/bagtep?characterEncoding=UTF8
		</connection-url>
		<driver>mysql</driver>
		<pool>
			<min-pool-size>1</min-pool-size>
			<max-pool-size>5</max-pool-size>
			<prefill>true</prefill>
		</pool>
		<security>
			<user-name>root</user-name>
			<password>1234</password>
		</security>
	</datasource>
</datasources>